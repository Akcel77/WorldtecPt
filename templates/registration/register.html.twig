        <h1 class="my-5">Registrar-se</h1>

        {% if notification %}
            <div class="alert alert-success">
                {{ notification }}
            </div>
            <hr>


        {% endif %}
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
