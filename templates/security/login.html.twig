{% extends 'base.html.twig' %}

{% block title %}Fazer login Worldtecpt{% endblock %}

{% block body %}
    <div class="container w-25 my-5 pt-5">
        <form method="post" class="my-5">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Você está conectado como {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Sair</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Por favor, faça login</h1>
            <label for="inputUsername">Nome de utilizador</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mb-4" autocomplete="username" required autofocus>
            <label for="inputPassword">Senha</label>
            <input type="password" name="password" id="inputPassword" class="form-control " autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <button class="btn btn btn-primary my-5" type="submit">
                Fazer login
            </button>
        </form>

        <p class="mb-5 pb-5">

            Ainda não tem uma conta? <a href="{{ path('app_register') }}">Registrar-se</a>
        </p>
    </div>


{% endblock %}
